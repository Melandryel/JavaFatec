package introducao;

import java.util.Scanner;

public class Exemplo3 {
	

	public static void main(String[] args) {
		Scanner ler = new Scanner(System.in);
		
		System.out.println("escolha a carroceria: ");
		System.out.println("1. Sedam");
		System.out.println("2. SUV");
		System.out.println("3. Perua");
		
		int escolhaCarroceria = ler.nextInt();
		
		System.out.println("Escolha o modelo: ");
		System.out.println("1. Básico");
		System.out.println("2. Intermediário");
		System.out.println("3. Luxo");
		
		int escolhaModelo = ler.nextInt();
		
		switch(escolhaCarroceria ) {
			case 1:
				System.out.println("Você escolheu um Sedan.");
				break;
			case 2:
				System.out.println("Você escolheu uma SUV.");
				break;
			case 3:
				System.out.println("Você escolheu uma Perua.");
				break;
			default:
				System.out.println("Opção Inválida.");
		}
		
		switch(escolhaModelo) {
			case 1:
				System.out.println("Básico.");
				break;
			
			case 2:
				System.out.println("Intermediário.");
				break;
				
			case 3:
				System.out.println("Luxo.");
				break;
				
			default:
				System.out.println("Opção Inválida");
				
		}
		
		ler.close();
	}
}
